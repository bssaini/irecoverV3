<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <include
        layout="@layout/toolbar_new_item"/>



  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:text="@string/new_claim_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin"
          android:textColor="@color/colorPrimary" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:hint="@string/new_claim_name_hint"
          android:layout_marginTop="8dp"
          android:ems="10"
          android:textColorHint="@color/hint_color"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin" />

      <TextView
          android:text="@string/new_claim_type"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin"
          android:textColor="@color/colorPrimary"
                />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:hint="@string/new_claim_type_hint"
          android:layout_marginTop="8dp"
          android:ems="10"
          android:textColorHint="@color/hint_color"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin" />

      <TextView
          android:text="@string/new_claim_time"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin"
          android:textColor="@color/colorPrimary" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:hint="@string/new_claim_time_hint"
          android:layout_marginTop="8dp"
          android:ems="10"
          android:textColorHint="@color/hint_color"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin" />

      <TextView
          android:text="@string/new_claim_witnesses"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin"
          android:textColor="@color/colorPrimary" />

      <TextView
          android:text="Witness 1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin" />
      <TextView
          android:text="Witness 2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin" />

      <TextView
          android:text="@string/new_claim_other_drivers"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin"
          android:textColor="@color/colorPrimary" />

      <TextView
          android:text="Other driver 1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin" />
      <TextView
          android:text="Other driver 2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin" />

      <TextView
          android:text="@string/new_claim_other_contacts"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin"
          android:textColor="@color/colorPrimary" />

      <TextView
          android:text="Contact 1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin" />
      <TextView
          android:text="Contact 2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin" />

      <TextView
          android:text="@string/new_claim_pictures"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin"
          android:textColor="@color/colorPrimary" />

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@color/colorPrimary"
          style="?android:attr/borderlessButtonStyle"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin"
          android:padding="8dp"
          android:text="@string/new_claim_btn_pictures" />

      <TextView
          android:text="@string/new_claim_memos"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin"
          android:textColor="@color/colorPrimary" />

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@color/colorPrimary"
          style="?android:attr/borderlessButtonStyle"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin"
          android:padding="8dp"
          android:text="@string/new_claim_btn_memos" />

      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/colorPrimary"
          style="?android:attr/borderlessButtonStyle"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="20dp"
          android:layout_marginStart="@dimen/view_container_margin"
          android:layout_marginEnd="@dimen/view_container_margin"
                android:textColor="@android:color/white"
          android:text="@string/general_save"
          local:MvxBind="Click SaveCommand" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>