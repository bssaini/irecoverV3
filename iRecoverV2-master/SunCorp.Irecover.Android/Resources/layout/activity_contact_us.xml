<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <include
        layout="@layout/toolbar_with_back_button"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="@string/contact_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/view_container_margin"
                android:layout_marginEnd="@dimen/view_container_margin"
                android:textColor="@color/colorPrimary" />


            <TextView
                android:text="@string/contact_customer_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/view_container_margin"
                android:layout_marginEnd="@dimen/view_container_margin"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:text="11 33 5514"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/view_container_margin"
                android:layout_marginEnd="@dimen/view_container_margin"
                android:autoLink="phone"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:text="@string/contact_claims"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/view_container_margin"
                android:layout_marginEnd="@dimen/view_container_margin"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:text="11 33 5514"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/view_container_margin"
                android:layout_marginEnd="@dimen/view_container_margin"
                android:autoLink="phone"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:text="@string/contact_problem_resolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/view_container_margin"
                android:layout_marginEnd="@dimen/view_container_margin"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:text="11 33 5514"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/view_container_margin"
                android:layout_marginEnd="@dimen/view_container_margin"
                android:autoLink="phone"
                android:textColor="@android:color/holo_blue_light" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>